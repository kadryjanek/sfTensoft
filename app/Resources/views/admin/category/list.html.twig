{% extends "admin/base.html.twig" %}

{% block title %}Lista kategorii{% endblock %}

{% block body %}

<div>
    <h1>{{ block('title') }} ({{ categories|length }})</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        
                        {# <a class="btn btn-primary btn-sm" href="{{ path('product_add_to_cart', {'id': product.id}) }}" > Dodaj do koszyka</a> #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Nie znaleziono kategorii.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        
</div>

{% endblock %}
